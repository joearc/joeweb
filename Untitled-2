  }
];

const menuDiv = document.getElementById("menu");
const buttonsDiv = document.getElementById("dayButtons");

function renderMenu(index) {
  document.querySelectorAll("button").forEach(b => b.classList.remove("active"));
  document.getElementById("btn" + index).classList.add("active");

  const m = menus[index];
  menuDiv.innerHTML = `
    <h2>${m.day}</h2>
    <strong>早餐</strong>
    <ul>${m.breakfast.map(i => `<li>${i}</li>`).join("")}</ul>
    <strong>午餐</strong>
    <ul>${m.lunch.map(i => `<li>${i}</li>`).join("")}</ul>
    <strong>晚餐</strong>
    <ul>${m.dinner.map(i => `<li>${i}</li>`).join("")}</ul>
  `;
}

menus.forEach((_, i) => {
  const btn = document.createElement("button");
  btn.id = "btn" + i;
  btn.textContent = "Day " + (i + 1);
  btn.onclick = () => renderMenu(i);
  buttonsDiv.appendChild(btn);
});

// 自動依星期幾顯示（週一=Day1）
const todayIndex = (new Date().getDay() + 6) % 7;
renderMenu(todayIndex);
</script>

